{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "World Happiness 2019",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/Udara-Rodrigo/FIT3179.github.io/main/worldmap.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Udara-Rodrigo/FIT3179.github.io/39785b2cfcb966e9c12c3883abd83e5e95c83cae/2019.csv"
        },
        "key": "Country or region",
        "fields": ["Source"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {"field": "Source", "type": "quantitative"},
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "Country or region"
      },
      {"field": "Score", "type": "quantitative"}
    ]
  },
  "config": {}
}